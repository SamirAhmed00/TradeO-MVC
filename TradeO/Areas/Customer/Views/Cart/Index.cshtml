@model TradeO.Models.ViewModels.ShoppingCartVM

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<div class="container my-5">
    <h2 class="mb-4 text-center text-primary fw-bold">
        <i class="bi bi-cart-check"></i> Your Shopping Cart
    </h2>

    @if (Model.ShoppingCartList == null || !Model.ShoppingCartList.Any())
    {
        <div class="text-center p-5 bg-light rounded-4 shadow-sm">
            <i class="bi bi-bag-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">Your cart is empty</h4>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index"
               class="btn btn-outline-primary mt-3 rounded-3 px-4">
                <i class="bi bi-arrow-left"></i> Continue Shopping
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th width="150">Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        var price = item.Product.DiscountPrice ?? item.Product.Price;
                        var itemTotal = price * item.Count;

                        <tr class="border-bottom">
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@item.Product.ImageUrl"
                                         alt="@item.Product.Name"
                                         class="rounded-3 me-3"
                                         style="width: 70px; height: 70px; object-fit: contain; background-color:#f8f9fa;" />
                                    <div>
                                        <h6 class="fw-semibold mb-1 text-dark">@item.Product.Name</h6>
                                        <small class="text-muted">@item.Product.Category?.Name</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-success fw-semibold">$@price</td>

                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <form asp-action="Decrease" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary rounded-circle fs-4 bg-danger-subtle">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                    </form>
                                    <span class="fw-semibold">@item.Count</span>
                                    <form asp-action="Increase" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary rounded-circle fs-4 bg-success-subtle">
                                            <i class="bi bi-plus text-black"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>

                            <td class="fw-bold text-dark">$@itemTotal</td>

                            <td>
                                <!-- Replace the inline form with a modal trigger button -->
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm rounded-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmDeleteModal"
                                        data-cart-id="@item.Id"
                                        data-product-name="@item.Product.Name">
                                    <i class="bi bi-trash"></i> Remove
                                </button>

                                @* <form asp-action="Delete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="cartId" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-3">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary Card -->
        <div class="row justify-content-end mt-4">
            <div class="col-md-5">
                <div class="card border-0 shadow-sm rounded-4 p-4">
                    <h5 class="fw-bold mb-3">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span class="fw-semibold text-dark">$@Model.OrderHeader.OrderTotal</span>
                    </div>
                    <div class="d-flex justify-content-between border-top pt-2 mt-2">
                        <span class="fw-bold">Total:</span>
                        <span class="fw-bold text-success fs-5">$@Model.OrderHeader.OrderTotal</span>
                    </div>
                    <div class="mt-4 d-flex justify-content-between gap-2">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                           class="btn btn-outline-primary flex-fill rounded-3">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                        <a asp-action="Summary"
                           class="btn btn-success flex-fill rounded-3 fw-semibold">
                            <i class="bi bi-credit-card"></i> Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<!-- Confirm delete modal for shopping cart item -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="confirmDeleteLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Remove item from cart
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p id="confirmDeleteMessage" class="mb-0"></p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary rounded-2" data-bs-dismiss="modal">Cancel</button>

                <!-- This form will post to the ShoppingCart Delete action in Customer area -->
                <form id="confirmDeleteForm"  asp-controller="Cart" asp-action="Delete" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="cartId" id="deleteCartId" value="" />
                    <button type="submit" class="btn btn-danger rounded-2">Remove permanently</button>
                </form>
            </div>
        </div>
    </div>
</div>



<style>
    tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>



<script>

    @*Js Code To Dynamic Get Row Shopping Name In Bootstrap Modal *@
    @* ⚠️ NOTE:
           We're setting the delete link dynamically using JavaScript instead of using
           ASP.NET Tag Helpers (asp-route-id), because the modal is shared for all rows.
           If we used asp-route-id directly, we would need to create a separate modal
           for every category, which would impact performance.
           This JS approach updates the link and category name dynamically while keeping the page lightweight.
    *@
    const confirmDeleteModal = document.getElementById('confirmDeleteModal');
    if (confirmDeleteModal) {
        confirmDeleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget; // الزر اللي فتح المودال
            const cartId = button.getAttribute('data-cart-id');
            const productName = button.getAttribute('data-product-name');

            // set message
            const msgEl = confirmDeleteModal.querySelector('#confirmDeleteMessage');
            msgEl.innerHTML = `Are you sure you want to remove: <span style="color:#d9534f; font-weight:bold; font-size: 20px">${productName}</span> from your cart? This will remove all quantities of this item.`;

            // set hidden input value
            const inputEl = confirmDeleteModal.querySelector('#deleteCartId');
            inputEl.value = cartId;
        });
    }

</script>
