@model TradeO.Models.ShoppingCart

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h1 class="mb-4">@Model.Product.Name</h1>

    <div class="row g-4">
        <!-- Left Side: Details -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-3">
                <h4 class="mb-3">Product Details</h4>
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-black">Name</dt>
                    <dd class="col-sm-8 text-black fw-bold fs-4">@Model.Product.Name</dd>

                    <dt class="col-sm-4  text-black">Description</dt>
                    <dd class="col-sm-8">@Model.Product.Description</dd>

                    <dt class="col-sm-4  text-black">Seller</dt>
                    <dd class="col-sm-8">@Model.Product.Seller</dd>

                    <dt class="col-sm-4  text-black ">Price</dt>
                    @* <dd class="col-sm-8 text-success fw-bold fs-4">$@Model.Price</dd> *@
                    <dd class="col-sm-8">
                        @if (Model.Product.DiscountPrice.HasValue)
                        {
                            <span class="text-muted text-decoration-line-through">$@Model.Product.Price</span>
                        }
                        else
                        {
                            <span class="text-success fw-bold fs-4">$@Model.Product.Price</span>
                        }
                    </dd>

                    <dt class="col-sm-4  text-black">Discount Price</dt>
                    @* <dd class="col-sm-8">@Model.DiscountPrice</dd> *@
                    <dd class="col-sm-8">
                        @if (Model.Product.DiscountPrice.HasValue)
                        {
                            <span class="text-success fw-bold fs-4">$@Model.Product.DiscountPrice</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </dd>


                    <dt class="col-sm-4  text-black">Category</dt>
                    <dd class="col-sm-8 text-black">@Model.Product.Category?.Name</dd>
                </dl>

                <form class="mt-4 d-flex flex-wrap align-items-center gap-3" asp-action="Details" method="post" asp-route-productId="@Model.Product.Id">
                    @* <input asp-for="ProductId" type="hidden" /> *@

                    <!-- Back Button -->
                    <a asp-action="Index" class="btn btn-outline-primary rounded-2 flex-fill">Back to List</a>

                    <!-- Quantity Input -->
                    <div class="input-group flex-fill" style="width: 180px;">
                        <span class="input-group-text bg-light border-end-0 rounded-2 ">
                            <i class="bi bi-cart-plus"></i>
                        </span>
                        <input asp-for="Count" type="number" class="form-control text-center border-start-0 rounded-2 fw-bold fs-4 text-black " min="1" value="1" id="quantityInput" />
                    </div>

                    <!-- Add to Cart Button -->
                    <button type="submit" class="btn btn-success rounded-2 fw-semibold flex-fill" id="addToCartBtn">
                        <i class="bi bi-bag-plus-fill me-1"></i> Add to Cart
                    </button>

                </form>
            </div>
        </div>

        <!-- Right Side: Image Preview -->
        <div class="col-lg-6 d-flex justify-content-center align-items-center">
            <div class="border rounded-4 bg-light d-flex justify-content-center align-items-center"
                 style="width: 100%; height: 400px; overflow: hidden;">
                @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                {
                    <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name"
                         style="width: 100%; height: 100%; object-fit: contain; padding: 10px; background-color:#f8f9fa;">
                }
                else
                {
                    <span class="text-muted">🖼️ No Image Available</span>
                }
            </div>
        </div>
    </div>
</div>
