@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row py-5">
    <!-- Sidebar موجودة في _Layout -->
    <div class="col-md-9 mx-auto">
        <div class="card shadow-sm border-0 rounded-4 p-4">
            <div class="card-body">
                <h1 class="text-primary fw-bold text-center mb-4">@ViewData["Title"]</h1>

                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                        <label asp-for="Username">Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <label asp-for="Input.PhoneNumber">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-primary btn-lg rounded-3 fw-semibold">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
