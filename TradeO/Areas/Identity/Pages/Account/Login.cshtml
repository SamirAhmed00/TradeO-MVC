@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-primary fw-bold">Welcome Back</h2>
            <p class="text-center text-muted mb-4">Please log in to continue</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control rounded-3" autocomplete="current-password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Remember me
                    </label>
                </div>

                <!-- Submit -->
                <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                    Log In
                </button>
            </form>

            <!-- Divider -->
            <div class="text-center my-3 text-muted">— or —</div>

            <!-- External Logins -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary rounded-3 w-100" name="provider" value="@provider.Name">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Log in with @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
            else
            {
                <p class="text-center small text-muted mt-3">
                    No external login services configured.
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Learn more</a>.
                </p>
            }

            <hr class="my-4" />

            <div class="text-center">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none d-block mb-2">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold text-primary d-block mb-2">Register as a new user</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-secondary small">Resend email confirmation</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
