@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4 text-center" style="max-width: 480px; width: 100%;">
        <div class="card-body p-5 d-flex flex-column align-items-center">
            <h1 class="text-danger mb-3 fw-bold">@ViewData["Title"]</h1>
            <p class="text-muted mb-4">You do not have access to this resource.</p>

            <div class="d-grid gap-3 w-100">
                <a asp-controller="Home" asp-action="Index" asp-area="Customer" class="btn btn-primary rounded-3 py-2 fw-semibold">Go to Home</a>
                <a asp-page="/Identity/Account/Login" class="btn btn-outline-secondary rounded-3 py-2">Login</a>
            </div>
        </div>
    </div>
</div>
