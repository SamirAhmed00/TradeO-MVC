@model IEnumerable<OrderHeader>

@{
    ViewData["Title"] = "Orders";
}

<div class="container py-5">

    <!-- Search Input & Status Filter -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <!-- Live Search -->
        <input type="text" id="searchInput" class="form-control border-black border-2 fs-5 w-100 rounded-3 text-black" placeholder="Search orders...">

        <!-- Status Filter Dropdown -->
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle rounded-3" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Filter By Status
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item fs-5 cursor-pointer" asp-action="Index" asp-route-status="All">All</a></li>
                <li><a class="dropdown-item fs-5 cursor-pointer" asp-action="Index" asp-route-status="Approved">Approved</a></li>
                <li><a class="dropdown-item fs-5 cursor-pointer" asp-action="Index" asp-route-status="Pending">Pending</a></li>
                <li><a class="dropdown-item fs-5 cursor-pointer" asp-action="Index" asp-route-status="Cancelled">Cancelled</a></li>
                <li><a class="dropdown-item fs-5 cursor-pointer" asp-action="Index" asp-route-status="InProcess">InProcess</a></li>
                <li><a class="dropdown-item fs-5 cursor-pointer" asp-action="Index" asp-route-status="Payment Pending">Payment Pending</a></li>
            </ul>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">📦 Orders List</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle table-hover table-striped" id="ordersTable">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.Name</td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.ApplicationUser?.Email</td>
                                    <td>
                                        <span class="badge bg-@(
                                              order.OrderStatus == "Approved" ? "success" :
                                              order.OrderStatus == "Pending" ? "warning" :
                                              order.OrderStatus == "Cancelled" ? "danger" :
                                              order.OrderStatus == "InProcess" ? "info" :
                                              order.OrderStatus == "Payment Pending" ? "secondary" : "dark")
                                              rounded - 2
                                              @(order.OrderStatus == "Shipped" ? "text-decoration-line-through" : "")">
                                                    @order.OrderStatus
                                            </span>
                                    </td>
                                    <td>@order.OrderTotal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                                    <td class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-orderId="@order.Id" class="btn btn-sm btn-outline-primary rounded-3">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger rounded-3"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                data-order-id="@order.Id" data-order-name="@order.Name">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                 </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    No orders found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-3 text-danger" id="deleteModalLabel">
                    <i class="bi bi-exclamation-diamond-fill"></i> Confirm Delete <i class="bi bi-exclamation-diamond-fill"></i>
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="orderToDelete" class="fs-5 fw-bold text-black"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary rounded-3" data-bs-dismiss="modal">Close</button>
                <form id="deleteOrderForm" asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="OrderId" id="deleteOrderId" />
                    <button type="submit" class="btn btn-outline-danger rounded-3">Delete Order</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Live Search JS -->
<script>
    const searchInput = document.getElementById('searchInput');
    const table = document.getElementById('ordersTable');
    const rows = table.getElementsByTagName('tr');

    searchInput.addEventListener('keyup', function() {
        const filter = searchInput.value.trim().toLowerCase();
        for (let i = 1; i < rows.length; i++) {
            const cells = rows[i].getElementsByTagName('td');
            let match = false;
            for (let j = 0; j < cells.length; j++) {
                if (cells[j].innerText.toLowerCase().includes(filter)) {
                    match = true;
                    break;
                }
            }
            rows[i].style.display = match ? '' : 'none';
        }
    });
</script>

<!-- Delete Modal JS -->
<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const orderName = button.getAttribute('data-order-name');
        const orderId = button.getAttribute('data-order-id');

        deleteModal.querySelector('#orderToDelete').innerHTML = `Are you sure you want to delete order: <span class="text-danger fw-bold">${orderName}</span>?`;
        deleteModal.querySelector('#deleteOrderId').value = orderId;
    });
</script>
