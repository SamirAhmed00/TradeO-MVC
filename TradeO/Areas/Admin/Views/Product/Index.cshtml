@model IEnumerable<TradeO.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">



    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="mb-0">Products</h2>

        <div class="d-flex align-items-center gap-2 productPageControls ">

            <!-- Search Input -->

            <div>
                <input type="text" id="searchInput" class="form-control border-black border-2 fs-4 w-100 rounded-3 text-black" placeholder="Search categories...">
            </div>
           




            <!-- Sort Dropdown -->
            
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle rounded-3" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Sort By
                </button>
                <ul class="dropdown-menu ">
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="nameAsc">
                            Alphabetical <i class="bi bi-sort-alpha-up"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="nameDesc">
                            Alphabetical <i class="bi bi-sort-alpha-down"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="priceAsc">
                            Price <i class="bi bi-sort-numeric-up"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="priceDesc">
                            Price <i class="bi bi-sort-numeric-down"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="discountAsc">
                            Discount <i class="bi bi-sort-numeric-up"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="discountDesc">
                            Discount <i class="bi bi-sort-numeric-down"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="sellerAsc">
                            Seller <i class="bi bi-sort-alpha-up"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="sellerDesc">
                            Seller <i class="bi bi-sort-alpha-down"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="newest">
                            Newest <i class="bi bi-sort-numeric-down"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item fs-5 cursor-pointer fw-bold text-black" asp-action="Index" asp-route-SortOrder="oldest">
                            Oldest <i class="bi bi-sort-numeric-up"></i>
                        </a>
                    </li>
                </ul>
            </div>


            <!-- Add New Category -->
            <a asp-action="Create" class="btn btn-primary fs-5 d-flex align-items-center gap-2 rounded-2">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>
    </div>


    <form method="get" class="d-flex align-items-end justify-content-end gap-2 mb-3">
        <select name="categoryId" class="form-select w-auto rounded-2 border-1 border-black text-black fw-bold" asp-items="@(ViewBag.Categories as IEnumerable<SelectListItem>)">
            <option value="">All Categories</option>
        </select>


         <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <div class="row gy-4 gx-md-4 gx-lg-5">
        @foreach (var item in Model)
{

            <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 d-flex">
                <div class="card shadow-sm border-0 flex-fill h-100 d-flex flex-column">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: contain; background-color: #f8f9fa; padding: 10px;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-black card-title-preview">@item.Name</h5>
                        <p class="card-text text-muted mb-2 description-preview" title="@item.Description">@item.Description</p>


                        <div class="mt-auto">
                            <div class="mb-2">
                                <strong class="fw-bold text-black">Seller:</strong> @item.Seller
                            </div>

                            <div class="mb-3">
                                @if (item.DiscountPrice.HasValue && item.DiscountPrice < item.Price)
                                {
                                    <span class="text-muted text-decoration-line-through me-2">@item.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))</span>
                                    <span class="fw-bold text-success fs-4">@item.DiscountPrice.Value.ToString("C", new System.Globalization.CultureInfo("en-US"))</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-success fs-4">@item.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))</span>
                                }
                            </div>
                        </div>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-primary rounded-2">Edit</a>
                            <a asp-action="Details" asp-route-productId="@item.Id" class="btn btn-sm rounded-2 text-black customHoverForDetailsbutton" style="border: 2px solid #198ba5">Details</a>
                            @* <a asp-action="Delete" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-danger rounded-2">Delete</a> *@
                            <!-- Button trigger modal -->
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger rounded-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#productDeleteModal"
                                    data-product-name="@item.Name"
                                    data-product-id="@item.Id">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Modal For Deleting Product-->
<div class="modal fade" id="productDeleteModal" tabindex="-1" aria-labelledby="productDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-3" id="productDeleteModalLabel">
                    <i class="text-danger bi bi-exclamation-diamond-fill"></i>
                    Deleting Product
                    <i class="text-danger bi bi-exclamation-diamond-fill"></i>
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p id="productToDelete" class="fs-5 fw-bold text-black"></p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary rounded-3" data-bs-dismiss="modal">Close</button>

                <!-- Delete Form (POST request) -->
                <form id="deleteProductForm" asp-action="Delete" asp-controller="Product" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ProductId" id="deleteProductId" />
                    <button type="submit" class="btn btn-outline-danger rounded-3">Delete Product</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @*JS Code For Live Searching*@

    <script>


        const searchInput = document.getElementById('searchInput');
        const productCards = document.querySelectorAll('.row.gy-4 .col-12'); 

        searchInput.addEventListener('input', function () {
            const filterText = this.value.toLowerCase();

            productCards.forEach(card => {
                const productNameElement = card.querySelector('.card-title-preview');
                const productName = productNameElement ? productNameElement.textContent.toLowerCase() : '';

                
                if (productName.includes(filterText)) {
                    card.classList.remove('d-none');
                } else {
                    card.classList.add('d-none');
                }
            });
        });

    </script>
   
    @* Js Code To Dynamically Get Row Product Name In Bootstrap Modal *@
    @* ⚠️ NOTE:
       We're setting the delete link dynamically using JavaScript instead of using
       ASP.NET Tag Helpers (asp-route-id), because the modal is shared for all rows.
       If we used asp-route-id directly, we would need to create a separate modal
       for every product, which would impact performance.
       This JS approach updates the link and product name dynamically while keeping the page lightweight.
    *@

    <script>
        const productDeleteModal = document.getElementById('productDeleteModal');

        productDeleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;

            // Get values from the clicked button
            const productName = button.getAttribute('data-product-name');
            const productId = button.getAttribute('data-product-id');

            // Set the modal text dynamically
            const modalBodyText = productDeleteModal.querySelector('#productToDelete');
            modalBodyText.innerHTML = `Are you sure you want to delete product: <span style="color:#d9534f; font-weight:bold; font-size: 20px">${productName}</span>?`;

            // Set the hidden input with the product ID
            const deleteInput = productDeleteModal.querySelector('#deleteProductId');
            deleteInput.value = productId;
        });
    </script>
}
