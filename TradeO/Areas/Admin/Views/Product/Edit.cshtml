@model ProductVM

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-4 align-items-start">
                <!-- Left Side (Form) -->
                <div class="col-lg-6">
                    <h3 class="fw-bold mb-4 text-dark">Edit Product</h3>

                    <form asp-action="Edit" class="p-4 border rounded-4 bg-white shadow-sm"
                          style="width: 100%;" method="post" id="EditForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="@Model.Product.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Product Name -->
                        <div class="mb-3">
                            <label asp-for="@Model.Product.Name" class="form-label fw-semibold text-black text-nowrap me-3">Product Name</label>
                            <input asp-for="@Model.Product.Name" class="form-control rounded-2 text-black" placeholder="Enter product name">
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.Name" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="@Model.Product.Description" class="form-label fw-semibold text-black me-3">Description</label>
                            <textarea asp-for="@Model.Product.Description" class="form-control rounded-2 text-black" rows="3" placeholder="Enter short description"></textarea>
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.Description" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Seller -->
                        <div class="mb-3">
                            <label asp-for="@Model.Product.Seller" class="form-label fw-semibold text-black me-3">Seller</label>
                            <input asp-for="@Model.Product.Seller" class="form-control rounded-2 text-black" placeholder="Seller name">
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.Seller" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="@Model.Product.Price" class="form-label fw-semibold text-black me-3">Price ($)</label>
                            <input asp-for="@Model.Product.Price" class="form-control rounded-2 text-black" placeholder="0.00">
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.Price" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Discount Price -->
                        <div class="mb-3">
                            <label asp-for="@Model.Product.DiscountPrice" class="form-label fw-semibold text-black text-nowrap me-3">Discount Price ($)</label>
                            <input asp-for="@Model.Product.DiscountPrice" class="form-control rounded-2 text-black" placeholder="Optional">
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.DiscountPrice" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Category List -->
                        <div class="mb-3">
                            <label asp-for="@Model.Product.CategoryId" class="form-label fw-semibold text-nowrap me-3 text-black">Category</label>
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select rounded-2 text-black" placeholder="Optional">
                                <option selected disabled>-- Select Category --</option>
                            </select>
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.CategoryId" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-4">
                            <label asp-for="@Model.Product.ImageUrl" class="form-label fw-semibold text-black">Product Image</label>
                            <input type="file" id="imgFileInput" name="imageFile" class="form-control rounded-2 text-black">
                        </div>
                        <div class="my-1">
                            <span asp-validation-for="@Model.Product.ImageUrl" class="text-danger small d-block" style="min-height: 1em;"></span>
                        </div>

                        <!-- Old Image -->
                        <input type="hidden" asp-for="@Model.Product.ImageUrl" />
                    </form>
                </div>

                <!-- Right Side (Reserved for Preview) -->
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <div class="border rounded-4 bg-light d-flex justify-content-center align-items-center"
                         style="width: 100%; height: 400px;">
                        <span id="previewPlaceholder" class="text-muted"
                              style="@(string.IsNullOrEmpty(Model.Product.ImageUrl) ? "" : "display:none;")">
                            🖼️ Image Preview (Coming Soon)
                        </span>

                        <img id="imagePreview" src="@Model.Product.ImageUrl" alt="Preview"
                             style="width:100%; height:100%; object-fit:contain; background-color:#f8f9fa; padding:10px;
                                  @(string.IsNullOrEmpty(Model.Product.ImageUrl) ? "display:none;" : "display:block;")">

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Buttons -->
<div class="d-flex justify-content-center gap-3">
    <a asp-action="Index" class="btn btn-outline-dark px-4 rounded-2">Cancel</a>
    <button type="submit" class="btn btn-success px-4 rounded-2" form="EditForm">Save Changes</button>
</div>

@section Scripts {
    @* JS Code To Preview The Image Once The User Upload It By Input Type=File *@
    <script>
        const fileInput = document.getElementById('imgFileInput');
        const imagePreview = document.getElementById('imagePreview');
        const placeholder = document.getElementById('previewPlaceholder');

        fileInput.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = 'block';
                    placeholder.style.display = 'none';
                };

                reader.readAsDataURL(file);
            } else {

                imagePreview.style.display = 'none';
                placeholder.style.display = 'block';
                imagePreview.src = '';
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
