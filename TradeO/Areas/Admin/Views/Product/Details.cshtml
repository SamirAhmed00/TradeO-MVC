
@model TradeO.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h1 class="mb-4">@Model.Name</h1>

    <div class="row g-4">
        <!-- Left Side: Details -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-3">
                <h4 class="mb-3">Product Details</h4>
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-black">Name</dt>
                    <dd class="col-sm-8 text-black fw-bold fs-4">@Model.Name</dd>

                    <dt class="col-sm-4  text-black">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4  text-black">Seller</dt>
                    <dd class="col-sm-8">@Model.Seller</dd>

                    <dt class="col-sm-4  text-black ">Price</dt>
                    @* <dd class="col-sm-8 text-success fw-bold fs-4">$@Model.Price</dd> *@
                    <dd class="col-sm-8">
                        @if (Model.DiscountPrice.HasValue)
                        {
                            <span class="text-muted text-decoration-line-through">$@Model.Price</span>
                        }
                        else
                        {
                            <span class="text-success fw-bold fs-4">$@Model.Price</span>
                        }
                    </dd>

                    <dt class="col-sm-4  text-black">Discount Price</dt>
                    @* <dd class="col-sm-8">@Model.DiscountPrice</dd> *@
                    <dd class="col-sm-8">
                        @if (Model.DiscountPrice.HasValue)
                        {
                            <span class="text-success fw-bold fs-4">$@Model.DiscountPrice</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </dd>


                    <dt class="col-sm-4  text-black">Category</dt>
                    <dd class="col-sm-8 text-black">@Model.Category?.Name</dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-outline-primary rounded-2">Back to List</a>
                    <a asp-action="Edit" asp-route-productId="@Model.Id" class="btn btn-primary me-2 rounded-2">Edit</a>
                </div>
            </div>
        </div>

        <!-- Right Side: Image Preview -->
        <div class="col-lg-6 d-flex justify-content-center align-items-center">
            <div class="border rounded-4 bg-light d-flex justify-content-center align-items-center"
                 style="width: 100%; height: 400px; overflow: hidden;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name"
                         style="width: 100%; height: 100%; object-fit: contain; padding: 10px; background-color:#f8f9fa;">
                }
                else
                {
                    <span class="text-muted">🖼️ No Image Available</span>
                }
            </div>
        </div>
    </div>
</div>
