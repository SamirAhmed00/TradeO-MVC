@model Company

@{
    ViewData["Title"] = "Edit Company";
}

@if (Model != null)
{
    <!-- Edit Company Form -->
    <div class="container-fluid px-3 px-md-5">
        <div class="card shadow-sm p-4 rounded mx-auto"
             style=" box-shadow: 0 0 10px 2px black !important;
                        background: linear-gradient(90deg,rgba(245, 245, 245, 1) 0%, rgba(189, 219, 189, 1) 50%, rgba(189, 219, 189, 0.83) 100%);">

            <h1 class="mb-4 text-black text-center">Edit Company</h1>

            <form asp-action="Edit" asp-controller="Company" method="post">
                @Html.AntiForgeryToken()

                <!-- Hidden Id -->
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">

                    <div class="col-12 col-md-6">
                        <label asp-for="Name" class="form-label fw-bold fs-4 text-primary">Company Name</label>
                        <input asp-for="Name" class="form-control rounded-3 fs-5 text-black" placeholder="Enter company name">
                        <span asp-validation-for="Name" class="text-danger fw-bold mt-2 d-block fs-5"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="StreetAddress" class="form-label fw-bold fs-4 text-primary">Street Address</label>
                        <input asp-for="StreetAddress" class="form-control rounded-3 fs-5 text-black" placeholder="Enter street address">
                        <span asp-validation-for="StreetAddress" class="text-danger fw-bold mt-2 d-block fs-5"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="City" class="form-label fw-bold fs-4 text-primary">City</label>
                        <input asp-for="City" class="form-control rounded-3 fs-5 text-black" placeholder="Enter city">
                        <span asp-validation-for="City" class="text-danger fw-bold mt-2 d-block fs-5"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="State" class="form-label fw-bold fs-4 text-primary">State</label>
                        <input asp-for="State" class="form-control rounded-3 fs-5 text-black" placeholder="Enter state">
                        <span asp-validation-for="State" class="text-danger fw-bold mt-2 d-block fs-5"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="PostalCode" class="form-label fw-bold fs-4 text-primary">Zip Code</label>
                        <input asp-for="PostalCode" class="form-control rounded-3 fs-5 text-black" placeholder="Enter zip code">
                        <span asp-validation-for="PostalCode" class="text-danger fw-bold mt-2 d-block fs-5"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-bold fs-4 text-primary">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control rounded-3 fs-5 text-black" placeholder="Enter phone number">
                        <span asp-validation-for="PhoneNumber" class="text-danger fw-bold mt-2 d-block fs-5"></span>
                    </div>

                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-5 py-3 rounded-3 fs-5">
                        <i class="bi bi-save me-2"></i> Update Company
                    </button>
                </div>
            </form>
        </div>

        <div class="text-end mt-4">
            <a class="btn btn-outline-primary px-5 py-3 rounded-3 fs-5" asp-action="Index">Back To Companies List</a>
        </div>
    </div>

    <!-- Validation Messages -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning text-center fs-5 fw-bold mt-3">
            @ViewBag.Message
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            Please correct the errors below before submitting the form.
        </div>
    }
}
else
{
    <div class="alert alert-danger text-center fs-5 fw-bold">
        @ViewBag.Message <h2>No Company Found</h2>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
